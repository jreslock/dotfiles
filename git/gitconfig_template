[core]
	editor   = code --wait --new-window
	pager    = less -F

[user]
    email    = jreslock@users.noreply.github.com
    name     = Jason Reslock

[color]
    ui       = auto

[push]
    default  = current

[pull]
    rebase   = true
    ff		 = only

[alias]
    ignore	 = "!gi() { curl -L -s https://www.gitignore.io/api/$@ ;}; gi"

[fetch]
    prune	 = true

[diff]
	tool     = code

[difftool "vscode"]
	cmd      = code --wait --diff $LOCAL $REMOTE
	tool	 = code

[merge]
    tool	 = code

[mergetool "code"]
	cmd      = code --wait $MERGED
