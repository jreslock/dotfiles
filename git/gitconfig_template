[core]
	editor   = code --wait
	pager    = less -F

[user]
    email    = jreslock@users.noreply.github.com
    name     = Jason Reslock

[color]
    ui       = auto

[push]
    default  = current
    autoSetupRemote = true

[init]
    defaultBranch = main

[rerere]
    enabled  = true

[pull]
    rebase   = true

[alias]
    ignore	 = "!gi() { curl -L -s https://www.gitignore.io/api/$@ ;}; gi"

[fetch]
    prune	 = true

[diff]
	tool     = code

[difftool "vscode"]
	cmd      = code --wait --diff $LOCAL $REMOTE
	tool	 = code

[merge]
    tool	 = code
    conflictStyle = zdiff3

[commit]
    verbose  = true

[mergetool "code"]
	cmd      = code --wait $MERGED
